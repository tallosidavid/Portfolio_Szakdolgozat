@model Portfolio.Models.FeedbackViewModel
@{
    ViewBag.Title = "New Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["error"] != null)
{<div class='alert alert-danger' role='alert' style="margin-top:20px;">
        @TempData["error"]
    </div>
}

<div class="row h-100 justify-content-md-center">
    <div class="col-md-6">
        <div class="card" style="height:auto;margin-top:20px;">
            <h5 class="card-header contact-header text-center py-4">
                <strong>New Feedback!</strong>
            </h5>
            <div class="card-body">
                @using (Html.BeginForm("Save", "Feedback", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="form-group">
                        @Html.LabelFor(m => m.Feedback.Nev)
                        @Html.TextBoxFor(m => m.Feedback.Nev, new { @class = "form-control", @style = "width:100%;" })
                        @Html.ValidationMessageFor(m => m.Feedback.Nev)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Feedback.Velemeny)
                        @Html.TextAreaFor(m => m.Feedback.Velemeny, new { @class = "form-control", @rows = "5", @style = "width:100%;" })
                        @Html.ValidationMessageFor(m => m.Feedback.Velemeny)
                    </div>
                    @Html.HiddenFor(m => m.Feedback.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn_contact" style="display:block;"><span>Send!</span></button>
                }
            </div>
        </div>
    </div>
</div>