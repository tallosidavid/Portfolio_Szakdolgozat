@model Portfolio.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


<div class="row h-100 justify-content-md-center">
    <div class="col-md-6">
        <div class="card" style="height:auto;margin-top:20px;">
            <h5 class="card-header contact-header text-center py-4">
                <strong>@ViewBag.Title!</strong>
            </h5>
            <div class="card-body">
                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword)
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @style = "width:100%;"  })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword)
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @style = "width:100%;"  })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "width:100%;"  })

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn_contact" style="display:block;"><span>Change!</span></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
