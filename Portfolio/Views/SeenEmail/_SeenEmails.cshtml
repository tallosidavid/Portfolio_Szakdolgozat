@model Portfolio.Models.Email


@if (Model.Lattamozott)
{
    <div class="col-md-auto">
        <div class="card" style="height:auto;margin-top:20px;">
            <div class="card-header" style="font-weight:bold;font-style:italic;background: linear-gradient(to right, #0ABF04, #0BD904);">
                @Model.Felado-(<a href='mailto:@Model.EmailCim'>@Model.EmailCim</a>)
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@Model.Uzenet</p>
                    <footer class="blockquote-footer">@Model.Idopont.ToShortDateString() </footer>
                    @if (User.IsInRole("Admin"))
                    {
                        <span onclick="return confirm('Are you sure you want to delete this email?')" style="float:right;margin-left:10px;">@Html.ActionLink("Delete", "Delete", "SeenEmails", new { id = Model.Id }, new { @class = "btn btn-danger" })</span>
                        
                    }
                </blockquote>
            </div>
        </div>
    </div> 
        }
