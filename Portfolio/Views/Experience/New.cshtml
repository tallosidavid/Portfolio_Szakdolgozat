@model Portfolio.Models.ExperienceViewModel
@{
    ViewBag.Title = "New Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Experience</h2>

@using (Html.BeginForm("Save", "Experience", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Experience.Hol)
        @Html.TextBoxFor(m => m.Experience.Hol, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Experience.Hol)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Experience.Mit)
        @Html.TextAreaFor(m => m.Experience.Mit, new { @class = "form-control", @rows = "5" })
        @Html.ValidationMessageFor(m => m.Experience.Mit)
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(m => m.Experience.Aktiv, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Experience.Aktiv, new { @class = "form-check-label" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Experience.Mettol)
        @Html.TextBoxFor(m => m.Experience.Mettol, "{0:yyyy-MM-dd}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Experience.Mettol)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Experience.Meddig)
        @Html.TextBoxFor(m => m.Experience.Meddig, "{0:yyyy-MM-dd}", new { @class = "form-control" }) 
    </div>

    @Html.HiddenFor(m => m.Experience.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Send</button>
}
