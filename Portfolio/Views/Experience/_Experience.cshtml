@model Portfolio.Models.Experience
 
    <div class="col-md-12">
        <div class="card" style="width:auto;height:auto;margin-top:20px;">
            <div class="card-header" style="font-weight:bold;font-style:italic;background: linear-gradient(to right, #43ff6f, #22cc4a);;">
                <h4 style="font-weight:bold;">@Model.Hol</h4>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@Model.Mit</p>
                    <footer class="blockquote-footer">@Model.Mettol.ToShortDateString() - @if (Model.Aktiv) { } else { <text>@Model.Meddig.ToShortDateString()</text>; } </footer>
                        <span style="float:right;margin-left:10px;">@Html.ActionLink("Edit", "Edit", "Experience", new { id = Model.Id }, new { @class = "btn btn-dark" })</span>
                        <span onclick="return confirm('Are you sure you want to delete this experience?')" style="float:right;">@Html.ActionLink("Delete", "Delete", "Experience", new { id = Model.Id }, new { @class = "btn btn-danger" })</span>
                   
                </blockquote>
            </div>
        </div>
    </div>
 

