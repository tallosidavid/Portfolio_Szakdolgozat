@model Portfolio.Models.EmailViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="margin-bottom:20px;">
    <div class="col-md-12">
        <h1 class="text-center">Feel free to contact Me!</h1>
        <p class="text-center">You can also contact me on multiple social network!</p>
    </div>
</div>
<div class="row h-100 justify-content-md-center">
    <div class="col-md-12">
        <div class="card" style="margin-bottom:0px;height:auto;">
            <h5 class="card-header contact-header text-center py-4">
                <strong>Ask a question!</strong>
            </h5>
            <div class="card-body">
                @using (Html.BeginForm("Save", "Email", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-5">
                            @Html.LabelFor(m => m.Email.Felado)
                            @Html.TextBoxFor(m => m.Email.Felado, new { @class = "form-control", @style = "width:100%;", @required = "True" })
                            @Html.ValidationMessageFor(m => m.Email.Felado)
                        </div>
                        <div class="col-7">
                            @Html.LabelFor(m => m.Email.EmailCim)
                            @Html.TextBoxFor(m => m.Email.EmailCim, new { @class = "form-control", @type = "email", @style = "width:100%;" })
                            @Html.ValidationMessageFor(m => m.Email.EmailCim)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email.Uzenet)
                        @Html.TextAreaFor(m => m.Email.Uzenet, new { @class = "form-control", @rows = "5", @style = "width:100%;" })
                        @Html.ValidationMessageFor(m => m.Email.Uzenet)
                    </div>
                    @Html.HiddenFor(m => m.Email.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn_contact" style="display:block;"><span>Send!</span></button>
                }
            </div>
        </div>
    </div>
    <div class="row h-100 justify-content-center align-content-center contactSocial" style="background-color:#43ff6f;width:500px;">
        <a href="https://arthungry.com/tallosi.david" target="_blank">
            <img class="iImg" src="~/Content/Icons/Arthungry_Logo_Zold.png" />
        </a>
        <a href="https://www.behance.net/dvidtallsi" target="_blank">
            <img class="iImg" src="~/Content/Icons/Behance_Logo_Zold.png" />
        </a>
        <a href="https://github.com/tallosidavid" target="_blank">
            <img class="iImg" src="~/Content/Icons/GitHub_Logo_Zold.png" />
        </a>
        <a href="mailto:tallosi.david69@gmail.com" target="_blank">
            <img class="iImg" src="~/Content/Icons/Gmail_Logo_Zold.png" style="padding-top:5px;" />
        </a>
        <a href="https://www.linkedin.com/in/d%C3%A1vid-tall%C3%B3si-4a86a0168/" target="_blank">
            <img class="iImg" src="~/Content/Icons/LinkedIn_Logo_Zold.png" />
        </a>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
