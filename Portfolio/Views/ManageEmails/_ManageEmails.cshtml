@model Portfolio.Models.Email


@if (!Model.Lattamozott)
{<div class="col-md-auto">
    <div class="card" style="height:auto;margin-top:20px;">
        <h5 class="card-header" style="font-weight:bold;font-style:italic;background: linear-gradient(to right, #43ff6f, #22cc4a);">
            @Model.Felado-(<a href='mailto:@Model.EmailCim' >@Model.EmailCim</a>)
        </h5>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@Model.Uzenet</p>
                <footer class="blockquote-footer">@Model.Idopont.ToShortDateString() </footer>
                @if (User.IsInRole("Admin"))
                {
                    <span onclick="return confirm('Are you sure you want to delete this email?')" style="float:right;margin-left:10px;">@Html.ActionLink("Delete", "Delete", "ManageEmails", new { id = Model.Id }, new { @class = "btn btn-danger" })</span>
                    <span style="float:right;">@Html.ActionLink("Seen", "Seen", "ManageEmails", new { id = Model.Id }, new { @class = "btn btn-success" })</span>
                }
            </blockquote>
        </div>
    </div>
</div>
    }
